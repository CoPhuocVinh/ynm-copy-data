{
  "name": "ynm-copy-data",
  "version": "1.0.0",
  "description": "Data Copy Service using RabbitMQ",
  "private": true,
  "engines": {
    "node": ">=18.0.0"
  },
  "workspaces": [
    "libs/*",
    "services/*"
  ],
  "scripts": {
    "build": "lerna run --stream build",
    "clean": "lerna run --stream clean",
    "format": "lerna run --stream format",
    "lint": "lerna run --stream lint",
    "lint:fix": "lerna run --stream lint:fix",
    "dev": "lerna run --parallel dev",
    "test": "lerna run --stream test --no-prefix",
    "coverage": "lerna run --stream coverage --no-prefix",
    
    "comments-old:consumer": "yarn dev:comments-old:consumer",
    "comments-old:producer": "yarn dev:comments-old:producer",
    "docs-old:consumer": "yarn dev:docs-old:consumer",
    "docs-old:producer": "yarn dev:docs-old:producer",
    
    "dev:comments-old:consumer": "cd services/copy-comments-old && yarn dev:consumer",
    "dev:comments-old:producer": "cd services/copy-comments-old && yarn dev:producer",
    "dev:docs-old:consumer": "cd services/copy-docs-old && yarn dev:consumer",
    "dev:docs-old:producer": "cd services/copy-docs-old && yarn dev:producer",
    
    "prepare": "husky install"
  },
  "keywords": [
    "nestjs",
    "rabbitmq",
    "microservices"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^11.1.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.1",
    "@nestjs/microservices": "^11.1.1",
    "@nestjs/platform-express": "^11.1.1",
    "@types/amqplib": "^0.10.7",
    "amqplib": "^0.10.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "js-yaml": "^4.1.0",
    "nest-commander": "^3.17.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@types/express": "^5.0.1",
    "@types/inquirer": "^8.1.3",
    "@types/node": "^22.15.18",
    "lerna": "^7.3.0",
    "nodemon": "^3.1.10",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "rimraf": "^6.0.1",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  }
}
